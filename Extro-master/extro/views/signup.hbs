
<!DOCTYPE html>
<html>
<head>
    <title>Extroflirt Login</title>
    <!-- javascript CDN -->
    <script type="text/javascript" src="http://CDNjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <!-- bootstrap CDN -->
    <link rel="stylesheet" type="text/css" href="http://CDNjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.1.1/css/bootstrap.min.css">

    <!-- CSS link -->
    <link rel="stylesheet" type="text/css" href="assets/css/login.css">
   
</head>

<body>
    
    <div class="container main-box">
        <img class="img-circle mainlogo"  src="../../img/logo.png" alt="Extroflirt" width="304" height="236">
        
        <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">

                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="#" class="active" id="login-form-link">Login</a>
                            </div>
                            <div class="col-xs-6">
                                <!-- Switches from login to register -->
                                <a href="#" id="register-form-link" onclick="toggleSignUp()">Register</a>
                            </div>
                        </div>
                        
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                    <!-- Form for login -->
                                     <form id="signin" name="signin" method="post" action="signin" role="form" style="display: block;">
                                            <label for="email">Email Address</label>
                                            <input class="text" name="email" type="text" tabindex="1"/>
                                            <label for="password">Password</label>
                                            <input name="password" type="password" tabindex="2"/>
                                            <br><input class="btn" type="submit" value="Sign In" />
                                     </form>
                                   
                                </form>
                                    <!-- Form for register -->
                                    <form id="signup" name="signup" method="post" action="profile" role="form" style="display: none;">
                                        <label for="email">Email Address</label>
                                        <input class="text" name="email" type="email"  tabindex="1"/>
                                        <label for="firstname">Firstname</label>
                                        <input name="firstname" type="text" tabindex="2"/>
                                        <label for="lastname">Lastname</label>
                                        <input name="lastname" type="text" tabindex="3"/>
                                        <label for="password">Password</label>
                                        <input name="password" type="password" tabindex="4"/><br>
                                        <input class="btn" type="submit" value="Sign Up" />
                                    </form>
                                  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    

    <script type="text/javascript">
        // Function to switch display of login/register
       function toggleSignUp() {
    var x = document.getElementById("signup");
    var y = document.getElementById("signin");
    if (x.style.display === "none") {
        x.style.display = "block";
    } else {
        x.style.display = "none";
    }
     if (y.style.display === "none") {
        y.style.display = "block";
    } else {
        y.style.display = "none";
    }
}
    </script>
</body> 
</html>