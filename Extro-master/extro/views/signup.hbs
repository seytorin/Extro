       function toggleSignUp() {
    var x = document.getElementById("signup");
    var y = document.getElementById("signin");
    if (x.style.display === "none") {
        x.style.display = "block";
    } else {
        x.style.display = "none";
    }
     if (y.style.display === "none") {
